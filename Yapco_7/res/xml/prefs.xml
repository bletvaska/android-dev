<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
            android:key="pref_refresh_on_startup"
            android:title="@string/pref_refresh_on_startup"
            android:summary="@string/pref_refresh_on_startup_summ"
            android:defaultValue="false"
            />

    <CheckBoxPreference
            android:key="pref_allow_automatic_updates"
            android:title="@string/pref_allow_automatic_updates"
            android:summary="@string/pref_allow_automatic_updates_summ"
            android:defaultValue="false"
            />

    <EditTextPreference
            android:key="pref_update_refresh_rate"
            android:title="@string/pref_update_refresh_rate"
            android:summary="@string/pref_update_refresh_rate_summ"
            android:inputType="number"
            android:defaultValue="15"
            />

</PreferenceScreen>